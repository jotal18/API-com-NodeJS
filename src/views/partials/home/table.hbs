<table class="highlight">
    <thead>
    <tr>
        <th>ID</th>
        <th>Nome</th>
        <th>Matrícula</th>
        <th>Setor</th>
        <th>Data</th>
        <th>Observação</th>
    </tr>
    </thead>

    <tbody>   
        {{#each adaptador}}
        <tr>
            <td>{{this.id}}</td>
            <td>{{this.nome}}</td>
            <td>{{this.matricula}}</td>
            <td>{{this.setor}}</td>
            <td>{{this.data}}</td>
            <td>{{this.observacao}}</td>
            <td>
                <a class="waves-effect waves-light btn-small teal darken-1" href="/adaptador/show/{{this.id}}">Editar</a>
            </td>
            <td>
                <form action="/adaptador/delete/{{this.id}}" method="post">
                    <input type="hidden" name="_method" value="delete">
                    <button type="submit" class="waves-effect waves-light btn-small red">Deletar</button>
                </form>
            </td>
        </tr>
        {{/each}}
    </tr>
    </tbody>
</table>